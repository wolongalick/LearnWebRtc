<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#05A554" />
                    <size android:width="67dp" android:height="67dp" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@mipmap/video_chat_answer" android:gravity="center" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#00C160" />
                    <size android:width="67dp" android:height="67dp" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@mipmap/video_chat_answer" android:gravity="center" />
            </item>
        </layer-list>
    </item>
</selector>